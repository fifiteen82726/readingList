    <div class="clearfix">



    
        <% @books.each do |book| %>

        <div class="col-md-8">
        
          <div class="row">
            <ul>
            <div class="col-md-4">
              <%= image_from_amazon(book.amazon_id) %>
            </div>
            <div class="col-md-8">
                <h3 class = "text-info">
                   <%= book.title %>
                </h3>
                 <br>
                <em class ="text-muted">
                    written by <%= book.author %>
                </em>
                <br>
                 <br>

                <p>
                    <%= book.description %>
                </p>

            </div>
         
            </ul>
          </div>
        </div>
        <div class="col-md-4">
        </div>


        <% end %>
      </div>
      </div>
    </div>
